<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    tools:context="com.sample.kontaktio.MainActivity">


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/device_list"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

   <!-- <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Device Log"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:id="@+id/device_log"
        android:layout_below="@+id/device_list"
        android:layout_marginTop="58dp" />-->

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/scanning"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="visible"
        android:gravity="center"
        app:indicator="BallScaleMultiple"
        app:indicator_color="#0000ff"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location_here"
        android:gravity="center"
        android:visibility="gone"
        android:src="@drawable/you_here"
        android:layout_marginTop="18dp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location_left"
        android:gravity="center"
        android:visibility="gone"
        android:src="@drawable/you_left"
        android:layout_marginTop="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/range_value"
        android:layout_alignTop="@+id/location_here"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="26dp" />


</RelativeLayout>
